<% include partials/header %>  
    <div class="container">
        <div class="row">
            <!-- FORM -->
            <div class="container">
                <div class="row">
                    <div class="">
                        <form action="/edit/<%= datos._id %>" method="POST">
                            <div class="form-group">
                                <label for="Nombre"><b><span >Nombre</span></b></label>
                                <input type="text" name="Nombre" id="Nombre" placeholder="" class="form-control" value="<%= datos.Nombre %>">
                            </div>
                            <div class="form-group">
                                <label for="Email"><b><span >Email</span></b></label>
                                <input type="email" name="Email" id="Email" placeholder="" class="form-control" value="<%= datos.Email %>">
                            </div>
                            <div class="form-group">
                                <label for="Telefono"><b><span >Teléfono</span></b></label>
                                <input type="number" name="Telefono" id="Telefono" placeholder="Telefono" class="form-control" value="<%= datos.Telefono %>">
                            </div>
                            <div class="form-group">
                                <label for="EstadoCivil"><b><span>Estado civil</span></b></label>
                                <select class="form-control" id="EstadoCivil" name="EstadoCivil">
                                    <% if(datos.EstadoCivil === 'Soltero') { %>
                                        <option value="Soltero" selected>Soltero</option>
                                        <option value="Casado">Casado</option>
                                    <% } else {%>
                                        <option value="Soltero">Soltero</option>
                                        <option value="Casado" selected>Casado</option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="EstadoCivil"><b><span>¿Tiene hijos?</span></b></label>
                                <% if(datos.Hijos === 'Si') { %>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="Hijos" id="Hijos" value="Si" checked>
                                        <label class="form-check-label" for="Hijos">
                                            Si
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="Hijos" id="Hijos" value="No">
                                        <label class="form-check-label" for="Hijo">
                                            No
                                        </label>
                                    </div> 
                                <% } else { %>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="Hijos" id="Hijos" value="Si">
                                        <label class="form-check-label" for="Hijos">
                                            Si
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="Hijos" id="Hijos" value="No" checked>
                                        <label class="form-check-label" for="Hijo">
                                            No
                                        </label>
                                    </div> 
                                <% } %>
                            </div>
                            <div class="form-group">
                                <label for="EstadoCivil"><b><span>Intereses</span></b></label>
                                <br>

                                <div class="form-check form-check-inline">
                                        <% if(L==='Libros') { %> 
                                            <input class="form-check-input" type="checkbox" name="Intereses" id="InteresesL" value="Libros" checked>
                                        <% } else {%>
                                            <input class="form-check-input" type="checkbox" name="Intereses" id="InteresesL" value="Libros">
                                        <% } %>
                                    <label class="form-check-label" for="InteresesL">Libros</label>
                                </div>
                                <div class="form-check form-check-inline">
                                        <% if(M==='Musica') { %> 
                                            <input class="form-check-input" type="checkbox" name="Intereses" id="InteresesM" value="Musica" checked>
                                        <% } else {%>
                                            <input class="form-check-input" type="checkbox" name="Intereses" id="InteresesM" value="Musica">
                                        <% } %>
                                    <label class="form-check-label" for="InteresesM">Musica</label>
                                </div>
                                <div class="form-check form-check-inline">
                                        <% if(D==='Deportes') { %> 
                                            <input class="form-check-input" type="checkbox" name="Intereses" id="InteresesD" value="Deportes" checked>
                                        <% } else { %>
                                            <input class="form-check-input" type="checkbox" name="Intereses" id="InteresesD" value="Deportes">
                                        <% } %>
                                    <label class="form-check-label" for="InteresesD">Deportes</label>
                                </div>
                                <div class="form-check form-check-inline">
                                        <% if(O==='Otros') { %>
                                            <input class="form-check-input" type="checkbox" name="Intereses" id="InteresesO" value="Otros" checked>
                                        <% } else { %>
                                            <input class="form-check-input" type="checkbox" name="Intereses" id="InteresesO" value="Otros">
                                        <% } %>
                                    <label class="form-check-label" for="InteresesO">Otros</label>
                                </div>
                            </div>
                            <a href="/edit/<%= datos._id %>"></a>
                            <button type="submit" class="btn btn-dark btn-block">Editar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<% include partials/footer %>